extends ../layout.jade
block content
  div(class="col-md-5 center-block no-float top-space text-left")
    h1 Agregar Producto
    form(method="post" action="/menu" style="margin-top:1.5em;" enctype="multipart/form-data")
      div(class="form-group")
        label Name
        input(type="text" name="title" placeholder="Product name" class="form-control")
      div(class="form-group")
        label Description
        textarea(name="description" placeholder="Product description" class="form-control")
      div(class="form-group")
        label Pricing
        input(type="number" name="pricing" placeholder="Pricing" class="form-control")
      div(class="form-group")
        label Product image
        input(type="file" name="image_avatar")
      div(class="form-group")
        label Password
        input(type="password" name="password" placeholder="Password" class="form-control")
      div(class="form-group")
        div(class="form-group text-right")
          input(type="submit" class="btn btn-info" value="Save")
